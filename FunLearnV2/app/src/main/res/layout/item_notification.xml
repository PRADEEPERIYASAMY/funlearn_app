<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/dimen_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/notification_details_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_32"
            android:layout_margin="@dimen/dimen_4"
            android:paddingHorizontal="@dimen/dimen_2">
            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                tools:srcCompat="@tools:sample/avatars"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:tooltipText="hello"
                android:text="@tools:sample/first_names"
                android:textColor="@color/violetWhite"
                android:maxLength="20"
                android:layout_toRightOf="@id/image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_4" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/violetWhite"
                android:text="10/12/2001"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dimen_4"/>
        </RelativeLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hello  how are you dear user"
            android:layout_below="@id/notification_details_container"
            android:padding="@dimen/dimen_8"/>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>