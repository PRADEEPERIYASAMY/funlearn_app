<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.UserTypeFragment">

    <Button
        android:id="@+id/child_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="child"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/parent_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <Button
        android:id="@+id/parent_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parent"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/child_mode"
        app:layout_constraintStart_toStartOf="@+id/child_mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.50" />

</androidx.constraintlayout.widget.ConstraintLayout>