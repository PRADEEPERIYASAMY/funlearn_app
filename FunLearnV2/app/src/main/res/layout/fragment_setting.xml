<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.SettingFragment"
    android:paddingHorizontal="@dimen/dimen_16">


    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/child_online_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="online visibility"
        android:textColor="@color/blueWhite"
        android:textSize="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="@dimen/dimen_16"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/parent_online_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="parent visibility"
        android:textColor="@color/blueWhite"
        android:textSize="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="@+id/child_online_visibility"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/child_online_visibility"
        app:layout_constraintTop_toBottomOf="@+id/child_online_visibility"
        android:paddingLeft="@dimen/dimen_16"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/geo_location_visibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="geo visibility"
        android:textColor="@color/blueWhite"
        android:textSize="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="@+id/parent_online_visibility"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/parent_online_visibility"
        app:layout_constraintTop_toBottomOf="@+id/parent_online_visibility"
        android:paddingLeft="@dimen/dimen_16"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/allow_phone_calls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="allow phone"
        android:textColor="@color/blueWhite"
        android:textSize="@dimen/dimen_16"
        app:layout_constraintEnd_toEndOf="@+id/geo_location_visibility"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/geo_location_visibility"
        app:layout_constraintTop_toBottomOf="@+id/geo_location_visibility"
        android:paddingLeft="@dimen/dimen_16"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/phone_sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:text="phone sound"
        android:textColor="@color/blueWhite"
        android:textSize="@dimen/dimen_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/allow_phone_calls"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/allow_phone_calls"
        app:layout_constraintTop_toBottomOf="@+id/allow_phone_calls"
        app:layout_constraintVertical_bias="0.63"
        android:paddingLeft="@dimen/dimen_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>