        android:id="@+id/item_word_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/item_word_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Apple"
        android:gravity="center"/>
</LinearLayout>